
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calendar</title>
    <style>
        /* CSS styles for the calendar */
        body {
            font-family: Arial, sans-serif;
        }

        h1 {
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
        }

        th {
            background-color: #f2f2f2;
        }

        .reserved {
            background-color: #ffcccc;
        }

        .available {
            background-color: #ccffcc;
        }
    </style>
</head>
<body>

<h1>Calendar</h1>
<!-- Calendar table will be rendered here -->
<table>
    <!-- Table headers (days of the week) -->
    <thead>
    <tr>
        <th>Date</th>
        <!-- Render meeting room names as table headers -->
        <% reservations.forEach(reservation => { %>
            <th><%= reservation.meetingRoom.name %></th>
        <% }) %>
    </tr>
    </thead>
    <!-- Table body (dates of the month) -->
    <tbody>
    <!-- Loop through each date in the month -->
    <% for(let i = 1; i <= 30; i++) { %>
        <tr>
            <!-- Display the date -->
            <td><%= i %></td>
            <!-- Check if each meeting room is reserved for this date -->
            <% reservations.forEach(reservation => { %>
                <% const date = moment({ year: reservation.startTime.getFullYear(), month: reservation.startTime.getMonth(), day: i }) %>
                <!-- Determine if the meeting room is reserved for this date -->
                <% const isReserved = date.isBetween(moment(reservation.startTime), moment(reservation.endTime), null, '[]') %>
                <!-- Apply CSS class based on reservation status -->
                <td class="<%= isReserved ? 'reserved' : 'available' %>"></td>
            <% }) %>
        </tr>
    <% } %>
    </tbody>
</table>

  
</body>
</html>