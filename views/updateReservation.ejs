<!-- updateReservationForm.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Reservation</title>
    <!-- Add any necessary CSS -->
</head>
<body>
<h1>Update Reservation</h1>
<form action="/reservation/<%= reservation._id %>/save" method="POST">
    <label for="user">User:</label>
    <input type="text" id="user" name="user" value="<%= reservation.user %>" placeholder="Enter user ID"><br>

    <label for="meetingRoom">Meeting Room:</label>
    <input type="text" id="meetingRoom" name="meetingRoom" value="<%= reservation.meetingRoom %>" placeholder="Enter meeting room ID"><br>

    <label for="startTime">Start Time:</label>
    <input type="datetime-local" id="startTime" name="startTime" value="<%= reservation.startTime.toISOString().slice(0, 16) %>"><br>

    <label for="endTime">End Time:</label>
    <input type="datetime-local" id="endTime" name="endTime" value="<%= reservation.endTime.toISOString().slice(0, 16) %>"><br>

    <button type="submit">Update Reservation</button>
</form>
</body>
</html>

